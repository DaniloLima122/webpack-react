{
  "compilerOptions": {
    "outDir": "./dist",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "sourceMap": true,
    "strictBindCallApply": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@foundation/*": ["src/foundation/*"],
      "@stories/*": ["src/stories/*"],
    },
  },
} 